<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="logistics.work.models.dao.WorkScheduleDao">
    <select id="queryWorkScheduleByDate" parameterType="java.util.Map"
            resultType="logistics.work.models.dto.WorkScheduleDto">
        select *
        from work_schedule
        where user_id=#{userId} and `date`=#{date}
    </select>
    <select id="queryWorkScheduleDetailByScheduleId" parameterType="Integer"
            resultType="logistics.work.models.dto.WorkScheduleDetailDto">
        select
        wsd.id,
        wp.work_name,
        wp.work_content,
        wp.work_instructor,
        wp.work_minutes,
        sc1.name as work_from,
        wsd.finish_status,
        wsd.finish_picture,
        wsd.finish_condition
        from work_schedule_detail as wsd
        left join sys_config as sc1
        on wsd.work_from=sc1.`code`
        left join work_pool as wp
        on wsd.work_id=wp.id
        <where>
            user_id=#{userId}
            and schedule_id=#{scheduleId}
            <if test="workFrom!=null">
                and wsd.work_from=#{workFrom}
            </if>
            <if test="workName!=null">
                and work_name like "%"#{workName}"%"
            </if>
        </where>
    </select>
    <update id="updateScheduleDetail" parameterType="logistics.work.models.dto.WorkScheduleDetailDto">
        update work_schedule_detail
        set finish_status=
        <foreach collection="list" item="item" index="index"
                 separator=" " open="case id" close="end">
            when #{item.id} then #{item.finishStatus}
        </foreach>,
        finish_picture=
        <foreach collection="list" item="item" index="index"
                 separator=" " open="case id" close="end">
            when #{item.id} then #{item.finishPicture}
        </foreach>,
        finish_condition=
        <foreach collection="list" item="item" index="index"
                 separator=" " open="case id" close="end">
            when #{item.id} then #{item.finishCondition}
        </foreach>
        where id in
        <foreach collection="list" index="index" item="item"
                 separator="," open="(" close=")">
            #{item.id}
        </foreach>
    </update>
    <update id="updateSchedule" parameterType="logistics.work.models.dto.WorkScheduleDto">
        update work_schedule
        set submit_time=NOW(),submit_status='submitted'
        where id=#{scheduleId}
    </update>
</mapper>
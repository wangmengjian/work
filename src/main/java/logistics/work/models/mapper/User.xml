<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="logistics.work.models.dao.UserDao">
    <select id="queryDeptNumberByUserId" parameterType="Integer" resultType="String">
        select
        dept_number
        from employee
        where id=(select employee_id from `user`where `user`.id=#{userId})
    </select>
</mapper>